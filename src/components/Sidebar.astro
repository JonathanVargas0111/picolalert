---
import { Icons } from '../lib/icons.js';

const { title, links } = Astro.props;
---

<aside class="w-64 bg-white text-gray-800 p-4 dark:bg-gray-800 dark:text-white fixed h-full hidden md:block">
	<h2 class="text-2xl font-bold mb-6">{title}</h2>
	<nav>
		<ul>
			{links.map(link => (
				<li class="mb-2">
					<a href={link.href} class="flex items-center hover:bg-gray-200 dark:hover:bg-gray-700 p-2 rounded">
						<Fragment set:html={Icons[link.icon]} />
						<span class="ml-2">{link.text}</span>
					</a>
				</li>
			))}
			<li class="mb-2 mt-8">
				<a href="/" class="flex items-center hover:bg-red-700 p-2 rounded bg-red-600 text-white">
					<Fragment set:html={Icons.LogOut} />
					<span class="ml-2">Cerrar Sesi√≥n</span>
				</a>
			</li>
		</ul>
	</nav>
</aside>

<!-- Mobile Menu Button -->
<div class="md:hidden fixed top-4 left-4 z-50">
  <button id="mobile-menu-button" class="p-2 rounded-md bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-white">
    <Fragment set:html={Icons.Menu} />
  </button>
</div>

<script is:inline>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const sidebar = document.querySelector('aside');

  if (mobileMenuButton && sidebar) {
    mobileMenuButton.addEventListener('click', () => {
      sidebar.classList.toggle('hidden');
      sidebar.classList.toggle('block');
    });
  }
</script>
