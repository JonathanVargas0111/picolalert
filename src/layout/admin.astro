---
import BaseLayout from './base.astro';
import Sidebar from '../components/Sidebar.astro';

// Enlaces para el panel de administrador
const adminLinks = [
  { href: '/admin/users', text: 'Lista de Usuarios', icon: 'Users' },
  { href: '/admin/pico-y-placa-rules', text: 'Gestión de Pico y Placa', icon: 'Settings' },
];

// Recibir props y pasarlas al layout base
const { 
  title = "Panel de Administrador - PicoAlert+",
  description = "Panel de administración para PicoAlert+. Gestiona usuarios y reglas de Pico y Placa.",
  keywords = "panel administrador, admin, usuarios, reglas, pico y placa, PicoAlert+",
  ...restProps 
} = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  keywords={keywords}
  {...restProps}
>
  <div class="flex h-screen bg-white dark:bg-gray-900">
    <Sidebar title="Panel de Administrador" links={adminLinks} />
    <main class="flex-1 p-6 overflow-y-auto md:ml-64">
      <slot />
    </main>
  </div>
</BaseLayout>