---
import UserLayout from "../../layout/user.astro";
import { createVehiculo } from "../../lib/api.js";
import { z } from 'zod';
import Toast from '../../components/Toast.astro';

const vehicleSchema = z.object({
    placa: z.string().min(1, "La placa es requerida"),
    tipoVehiculo: z.string().min(1, "El tipo de vehículo es requerido"),
    combustible: z.string().min(1, "El combustible es requerido"),
});

let message = null;
let messageType = null;

if (Astro.request.method === "POST") {
    try {
        const formData = await Astro.request.formData();

        const vehicleData = vehicleSchema.parse({
            placa: formData.get("placa"),
            tipoVehiculo: formData.get("tipoVehiculo"),
            combustible: formData.get("combustible"),
        });

        const newVehiculo = await createVehiculo({
            Placa: vehicleData.placa,
            Tipo_Vehiculo: vehicleData.tipoVehiculo,
            Combustible: vehicleData.combustible,
        });

        message = "Vehículo registrado exitosamente!";
        messageType = "success";
        // Redirigir a una página de éxito o al dashboard del usuario
        // return Astro.redirect("/user/dashboard"); // Descomentar si se quiere redirigir inmediatamente
    } catch (error) {
        if (error instanceof z.ZodError) {
            message = "Error de validación: " + error.errors.map(e => e.message).join(", ");
            messageType = "error";
        } else {
            message = "Error al crear vehículo: " + error.message;
            messageType = "error";
        }
    }
}
---

<UserLayout>
  <section class="bg-white dark:bg-gray-900">
    <div class="py-8 px-4 mx-auto max-w-2xl lg:py-16">
        <h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Registrar Vehículo</h2>
        
        {message && <Toast message={message} type={messageType} />}

        <form method="POST" enctype="multipart/form-data">
            <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
                <div class="sm:col-span-2">
                    <label for="placa" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Placa</label>
                    <input type="text" name="placa" id="placa" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Ingresa la placa" required>
                </div>
                <div class="w-full">
                    <label for="tipoVehiculo" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Tipo de Vehículo</label>
                    <input type="text" name="tipoVehiculo" id="tipoVehiculo" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Ej: Automóvil" required>
                </div>
                <div class="w-full">
                    <label for="combustible" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Combustible</label>
                    <input type="text" name="combustible" id="combustible" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Ej: Gasolina" required>
                </div>
            </div>
            <button type="submit" class="inline-flex items-center px-5 py-2.5 mt-4 sm:mt-6 text-sm font-medium text-center text-white bg-picoBlue rounded-lg focus:ring-4 focus:ring-primary-200 dark:focus:ring-primary-900 hover:bg-primary-800">
                Registrar Vehículo
            </button>
        </form>
    </div>
  </section>
</UserLayout>