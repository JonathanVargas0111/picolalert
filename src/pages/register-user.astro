---
import Layout from "../layout/layout.astro";
import { createUsuario } from "../lib/api.js";
import { z } from 'zod';
import Toast from '../components/Toast.astro';

const userSchema = z.object({
    nombre: z.string().min(1, "El nombre es requerido"),
    correo: z.string().email("Correo inválido").min(1, "El correo es requerido"),
    telefono: z.string().min(1, "El teléfono es requerido"),
    ciudad: z.string().transform(Number).pipe(z.number().int().positive("Ciudad inválida")), // Asumiendo que ciudad es un ID numérico
});

let message = null;
let messageType = null;

if (Astro.request.method === "POST") {
    try {
        const formData = await Astro.request.formData();

        const userData = userSchema.parse({
            nombre: formData.get("nombre"),
            correo: formData.get("correo"),
            telefono: formData.get("telefono"),
            ciudad: formData.get("ciudad"),
        });

        const newUser = await createUsuario({
            Nombre: userData.nombre,
            Correo: userData.correo,
            Telefono: userData.telefono,
            Ciudad: userData.ciudad,
        });

        message = "Usuario registrado exitosamente!";
        messageType = "success";
        // Redirigir a una página de éxito o al login
        // return Astro.redirect("/login"); // Descomentar si se quiere redirigir inmediatamente
    } catch (error) {
        if (error instanceof z.ZodError) {
            message = "Error de validación: " + error.errors.map(e => e.message).join(", ");
            messageType = "error";
        } else {
            message = "Error al crear usuario: " + error.message;
            messageType = "error";
        }
    }
}
---

<Layout title="Registro de Usuario - PicoAlert+" description="Regístrate en PicoAlert+ para recibir notificaciones personalizadas de pico y placa en Bogotá." keywords="registro, usuario, pico y placa, Bogotá, alerta, notificaciones">
  <section class="bg-white dark:bg-gray-900">
    <div class="py-8 px-4 mx-auto max-w-2xl lg:py-16">
        <h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Registro de Usuario</h2>
        
        {message && <Toast message={message} type={messageType} />}

        <form method="POST">
            <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
                <div class="sm:col-span-2">
                    <label for="nombre" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Nombre</label>
                    <input type="text" name="nombre" id="nombre" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Ingresa tu nombre" required>
                </div>
                <div class="sm:col-span-2">
                    <label for="correo" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Correo</label>
                    <input type="email" name="correo" id="correo" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Ingresa tu correo" required>
                </div>
                <div class="w-full">
                    <label for="telefono" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Teléfono</label>
                    <input type="text" name="telefono" id="telefono" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Ingresa tu teléfono" required>
                </div>
                <div class="w-full">
                    <label for="ciudad" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Ciudad</label>
                    <input type="text" name="ciudad" id="ciudad" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" value="1" readonly>
                </div>
            </div>
            <button type="submit" class="inline-flex items-center px-5 py-2.5 mt-4 sm:mt-6 text-sm font-medium text-center text-white bg-picoBlue rounded-lg focus:ring-4 focus:ring-primary-200 dark:focus:ring-primary-900 hover:bg-primary-800">
                Registrarse
            </button>
        </form>
    </div>
  </section>
</Layout>